        const contentDisplay = document.getElementById('content-display');
        const categoryTabs = document.querySelectorAll('.category-tab');

        // å‡½æ•¸ï¼šç”Ÿæˆå–®å€‹å‹•ç‰©å¡ç‰‡çš„ HTML
        function createAnimalCard(animal, categoryColor) {
            return `
                <div class="content-card bg-white p-6 rounded-3xl shadow-xl border-t-8 border-${categoryColor}-500 transition duration-300">
                    <img src="${animal.image}" alt="${animal.name}" class="w-full h-auto object-cover rounded-xl mb-4 cute-shadow" onerror="this.onerror=null;this.src='https://placehold.co/400x250/E5E7EB/4B5563?text=åœ–ç‰‡è¼‰å…¥å¤±æ•—';" />
                    <h2 class="text-3xl font-extrabold text-${categoryColor}-700 mb-2">${animal.name}</h2>
                    <p class="text-gray-600 mb-4 italic">${animal.summary}</p>
                    <div class="bg-${categoryColor}-50 p-4 rounded-xl border border-${categoryColor}-200">
                        <h3 class="font-bold text-${categoryColor}-600 mb-2">è©³ç´°è³‡è¨Š</h3>
                        <p class="text-gray-700 text-sm leading-relaxed">${animal.details}</p>
                    </div>
                </div>
            `;
        }

        // å‡½æ•¸ï¼šé¡¯ç¤ºé¸å®šé¡åˆ¥çš„å…§å®¹
        function displayContent(categoryKey) {
            contentDisplay.innerHTML = '';
            const categoryData = categories[categoryKey];
            const headerHtml = `
                <div class="col-span-full mb-4">
                    <h2 class="text-4xl font-extrabold text-gray-800 border-b-4 border-${categoryData.color}-400 pb-2">${categoryData.title}</h2>
                </div>
            `;
            contentDisplay.innerHTML = headerHtml;

            categoryData.animals.forEach(animal => {
                contentDisplay.innerHTML += createAnimalCard(animal, categoryData.color);
            });

            // æ›´æ–°æ´»èºæ¨™ç±¤æ¨£å¼
            categoryTabs.forEach(tab => tab.classList.remove('active'));
            document.querySelector(`.category-tab[data-category="${categoryKey}"]`).classList.add('active');
        }

        // è™•ç†é¡åˆ¥æ¨™ç±¤é»æ“Šäº‹ä»¶
        categoryTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const category = tab.getAttribute('data-category');
                displayContent(category);
            });
        });

        // é è¨­è¼‰å…¥å“ºä¹³é¡
        window.onload = () => {
            displayContent('mammals');
        };
